
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="body-content outer-top-xs" ng-controller="GetCategoryListController">
    <div class="container">
        <div class="product-comparison">
            <div>
                <div class="row heading-title">
                    <div class="col-md-8">
                        <h1 class="page-title text-left">Category Details</h1>
                    </div>
                    <div class="col-md-4  text-right">
                        <h1 class=" lnk btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Add Category</h1>
                    </div>

                    <!----------------Model Add Category--------------------->

                    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" style="display: none;" aria-hidden="true">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content" style="color:black;">
                                <div class="modal-header" style="border-bottom-color: #bdb7b7;">
                                    <h4 class="modal-title" id="mySmallModalLabel">Add New Category</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top:-23px; margin-right: 46px;">×</button>

                                </div>
                                <form class="form" novalidate name="f1" ng-submit="AddCategory()">
                                    <div style="position: relative; padding: 30px;">
                                        <div class="row">
                                            <div class="form-group">
                                                <label>Category Name</label>
                                                <input type="text" capitalize class="form-control" placeholder="Category Name" name="CategoryName" autocomplete="off" ng-model="CategoryData.CategoryName" ng-class="Submitted?'ng-dirty':''" required autofocus>
                                                <span class="error" ng-show="(f1.CategoryName.$dirty || Submitted) && f1.CategoryName.$error.required">Category Name Required</span>
                                            </div>
                                        </div>
                                        <div class="row" style="padding-left: 195px;">
                                            <button type="submit" id="row-count" class="btn btn-xs btn-primary pull-right">SUBMIT</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>

                    <!-----------------End Model---------------->
                </div>
                <div class="table-responsive">
                    <table class="table compare-table inner-top-vs">
                        <tbody>
                            <tr>
                                <th class="text-center">CategoryID</th>
                                <th class="text-center">Category Name</th>
                                <th class="text-center">Date</th>
                                <th class="text-center">Active Status</th>
                                <th class="text-center">Action</th>
                            </tr>

                            <tr ng-repeat="e in CategorylList">
                                <td class="text-center">{{e.CategoryID}}</td>
                                <td class="text-center">{{e.CategoryName}}</td>
                                <td class="text-center">{{e.SCreatedOn}}</td>
                                <td class="text-center">
                                    <span ng-if="e.IsActive==true" style="background-color:#108bea" class="badge badge-success">Active</span>
                                    <span ng-if="e.IsActive==false" style="background-color:red" class="badge badge-danger">DeActive</span>
                                </td>
                                <td class="text-center">
                                    <i class="fa fa-trash mouse-Hover" ng-click="Delete(e.CategoryID)" style="color:#d75252;font-size:x-large" aria-hidden="true"></i>
                                    <i class="fa fa-pencil-square-o mouse-Hover" data-toggle="modal" data-target="#modal-right" ng-click="Edit(e.CategoryID)" style="color:#0094ff;font-size:x-large" aria-hidden="true"></i>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-----------Modul------------------>

                    <div class="modal modal-right fade" id="modal-right" tabindex="-1" style="display: none;" aria-hidden="true">

                        <div class="modal-dialog">
                            <div class="container">
                                <div class="modal-content" style="width:350px">
                                    <div class="modal-header" style="border-bottom-color: #888282;">
                                        <div class="row container">
                                            <h5 class="modal-title">Edit Category</h5>
                                            <button type="button" class="close" data-dismiss="modal" style="margin-top:-23px">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Category Name</label>
                                            <input type="text" capitalize class="form-control" placeholder="Category Name" name="CategoryName" autocomplete="off" ng-model="CategoryRecord.CategoryName" ng-class="Submitted?'ng-dirty':''" required autofocus>

                                        </div>
                                    </div>
                                    <div class="modal-footer modal-footer-uniform">

                                        <button type="button" ng-click="UpdateCategory(CategoryRecord.CategoryID,CategoryRecord.CategoryName)" class="btn btn-bold btn-primary float-right">Update</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-----------END Modul------------------>
                </div>
            </div>
        </div>
    </div>
</div>